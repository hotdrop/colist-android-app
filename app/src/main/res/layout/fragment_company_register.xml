<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.fragment.CompanyRegisterFragment">

    <data>
        <variable name="company" type="jp.hotdrop.compl.model.Company" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/label_name"
                style="@style/ItemLabel"
                android:layout_marginTop="@dimen/spacing_small"
                android:text="会社名" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/text_name"
                style="@style/EditText"
                android:layout_below="@id/label_name"
                android:text="@={company.name}" />

            <TextView
                android:id="@+id/label_category"
                style="@style/ItemLabel"
                android:layout_below="@id/text_name"
                android:text="分類" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/text_category"
                style="@style/EditText"
                android:layout_below="@id/label_category"
                android:text="@={company.group.name}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_category"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_salary"
                    style="@style/ItemLabel"
                    android:text="年収" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/text_salary_lower"
                    style="@style/CompactEditText"
                    android:text="@{String.valueOf(company.salaryLow)}" />

                <TextView
                    android:id="@+id/label_salary_range_mark"
                    style="@style/ItemLabel"
                    android:text="〜" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/text_salary_high"
                    style="@style/CompactEditText"
                    android:text="@{String.valueOf(company.salaryHigh)}" />
            </LinearLayout>



        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing"
            android:layout_weight="0.2"
            android:layout_gravity="center">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/register_button"
                style="@style/OKButton"
                android:text="Add"/>

        </LinearLayout>

    </LinearLayout>

</layout>

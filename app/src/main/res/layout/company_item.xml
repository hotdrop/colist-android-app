<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="company" type="jp.hotdrop.compl.model.Company" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:clipChildren="false"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/item_list_background"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:padding="@dimen/spacing">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:textSize="@dimen/text_large"
                    android:textColor="@color/item_list_text_color"
                    android:text="@{company.name}" />

                <TextView
                    android:id="@+id/label_employees_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:layout_below="@id/txt_name"
                    android:textColor="@color/item_list_subtext_color"
                    android:textSize="@dimen/text_small"
                    android:text="従業員数:" />

                <TextView
                    android:id="@+id/txt_employees_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_name"
                    android:layout_alignTop="@id/label_employees_num"
                    android:layout_toEndOf="@id/label_employees_num"
                    android:textColor="@color/item_list_subtext_color"
                    android:textSize="@dimen/text_small"
                    android:text="@{String.valueOf(company.employeesNum)}" />

                <TextView
                    android:id="@+id/label_salary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_name"
                    android:layout_alignTop="@id/label_employees_num"
                    android:layout_toEndOf="@id/txt_employees_num"
                    android:textColor="@color/item_list_subtext_color"
                    android:textSize="@dimen/text_small"
                    android:text="年収:" />

                <TextView
                    android:id="@+id/txt_salary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_name"
                    android:layout_alignTop="@id/label_employees_num"
                    android:layout_toEndOf="@id/label_salary"
                    android:textColor="@color/item_list_subtext_color"
                    android:textSize="@dimen/text_small"
                    android:text="TODO"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</layout>

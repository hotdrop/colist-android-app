<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerDropDownBorder</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AccentButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/button_disabled</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/toolbar_text_primary</item>
        <item name="android:textColorSecondary">@color/toolbar_text_secondary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/spacing</item>
        <item name="android:layout_marginLeft">@dimen/spacing</item>
        <item name="android:layout_marginRight">@dimen/spacing</item>
        <item name="android:layout_marginTop">@dimen/spacing</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Tab -->
    <style name="TabLayoutTextAppearance" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CustomTabLayout</item>
    </style>
    <style name="CustomTabLayout" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RecyclerViewTheme">
        <item name="android:clipToPadding">false</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollingCache">false</item>
    </style>

    <!-- list -->
    <style name="ListItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/spacing_small</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/item_list_text</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="ListSubItemLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/spacing_small</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/item_list_subtext</item>
        <item name="android:textSize">@dimen/text_more_small</item>
    </style>

    <style name="ListSubItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/item_list_subtext</item>
        <item name="android:textSize">@dimen/text_more_small</item>
    </style>

    <!-- detail fragment -->
    <style name="ItemLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/spacing</item>
        <item name="android:layout_marginStart">@dimen/spacing</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/label</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="ItemUnitLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/label</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="AttentionLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">@dimen/spacing</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/attention</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_marginStart">@dimen/spacing</item>
        <item name="android:layout_marginEnd">@dimen/spacing</item>
        <item name="android:lines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="MultiLineEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_marginStart">@dimen/spacing</item>
        <item name="android:layout_marginEnd">@dimen/spacing</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="CompactEditText">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_marginStart">@dimen/spacing</item>
        <item name="android:lines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <!-- Spinner -->
    <style name="Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/spinner_height</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_marginStart">@dimen/spacing</item>
        <item name="android:layout_marginEnd">@dimen/spacing</item>
        <item name="android:background">@drawable/spinner_shape</item>
        <item name="android:popupBackground">@drawable/spinner_popup_shape</item>
        <item name="android:clickable">true</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="SpinnerDropDownItem" parent="android:style/Widget.DropDownItem.Spinner">
        <item name="android:background">@drawable/selectable_background</item>
        <item name="android:checkMark">@null</item>
    </style>

    <style name="SpinnerDropDownBorder" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">@color/spinner_border</item>
        <item name="android:dividerHeight">@dimen/border_height</item>
    </style>

    <!-- company detail fragment -->
    <style name="CompanyDetailTitle">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="SectionTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/spacing</item>
        <item name="android:layout_marginTop">@dimen/spacing_large</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/text_sub_title</item>
    </style>

    <style name="TitleBorder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/border_height</item>
        <item name="android:layout_marginStart">@dimen/spacing</item>
        <item name="android:layout_marginEnd">@dimen/spacing</item>
        <item name="android:background">@color/border_line</item>
    </style>

    <style name="MultiLineDisplayText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_marginStart">@dimen/spacing</item>
        <item name="android:layout_marginEnd">@dimen/spacing</item>
        <item name="android:layout_marginBottom">@dimen/spacing</item>
        <item name="android:textColor">@color/subtext</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="OverViewItemLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/spacing</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/label</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="OverViewItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">@dimen/spacing_small</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/label</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="JobEvaluationLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/spacing</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:drawableTint">@color/unchecked_evaluation_draw</item>
        <item name="android:textColor">@color/unchecked_evaluation_text</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <!-- evaluation fragment -->
    <style name="EvaluationTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/spacing_small</item>
        <item name="android:layout_marginEnd">@dimen/spacing</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="EvaluationNote">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/spacing_small</item>
        <item name="android:layout_marginEnd">@dimen/spacing</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
        <item name="android:textColor">@color/item_list_subtext</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="EvaluationListBorder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/border_height</item>
        <item name="android:layout_marginTop">@dimen/spacing</item>
        <item name="android:background">@color/border_line</item>
    </style>

    <!-- fab menu -->
    <style name="FabMenuText">
        <item name="android:layout_marginEnd">@dimen/spacing_small</item>
        <item name="android:elevation">@dimen/elevation_fab_menu_text</item>
        <item name="android:padding">5dip</item>
    </style>

    <!-- edit icon -->
    <style name="EditIconImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/spacing_small</item>
        <item name="android:layout_marginTop">@dimen/spacing_large</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>

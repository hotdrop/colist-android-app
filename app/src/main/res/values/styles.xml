<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NavigationImageIcon">
        <item name="android:layout_marginTop">@dimen/spacing</item>
        <item name="android:layout_marginLeft">@dimen/spacing</item>
        <item name="android:layout_marginStart">@dimen/spacing_large</item>
    </style>

    <style name="NavigationDescription">
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_marginEnd">@dimen/spacing</item>
        <item name="android:layout_marginLeft">@dimen/spacing</item>
        <item name="android:layout_marginRight">@dimen/spacing</item>
        <item name="android:layout_marginStart">@dimen/spacing</item>
        <item name="android:textColor">@color/nav_menu_text</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RecyclerViewTheme">
        <item name="android:clipToPadding">false</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollingCache">false</item>
    </style>

    <style name="CompanyDetailTitle">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="SectionTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/spacing_small</item>
        <item name="android:layout_marginRight">@dimen/spacing_small</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">@dimen/spacing_small</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">@dimen/spacing_small</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/text_sub_title</item>
    </style>

    <style name="ItemLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/spacing_small</item>
        <item name="android:layout_marginRight">@dimen/spacing_small</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/label</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/spacing_small</item>
        <item name="android:lines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="CompactEditText">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/spacing_small</item>
        <item name="android:lines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="OKButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/spacing_small</item>
        <item name="android:layout_marginRight">@dimen/spacing_small</item>
        <item name="android:background">@color/ok_button_background</item>
        <item name="android:textColor">@color/ok_button_text</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="CategorySpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:background">@drawable/spinner_shape</item>
        <item name="android:popupBackground">@drawable/spinner_popup_shape</item>
        <item name="android:clickable">true</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="Border">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/border_line</item>
    </style>


</resources>

<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="colorPrimary">@color/orange</color>
    <color name="colorPrimaryDark">@color/gray</color>
    <color name="colorAccent">@color/orange</color>

    <!-- title -->
    <color name="title">@color/white</color>

    <!-- bottom navigation -->
    <color name="bottom_nav_menu_background">@color/white</color>

    <!-- Tab -->
    <color name="tab_background">@color/white</color>
    <color name="tab_indicator">@color/dark_orange</color>
    <color name="tab_unselected_text">@color/light_gray</color>
    <color name="tab_selected_text">@color/black</color>

    <!-- list fragment -->
    <color name="view_background">@color/light_gray</color>
    <color name="nested_scroll_view_background">@color/white</color>
    <color name="item_list_background">@color/white</color>
    <color name="item_list_text">@color/black</color>
    <color name="item_list_subtext">@color/gray</color>

    <!-- tag -->
    <color name="item_tag_background">@color/white</color>
    <color name="item_tag_unselected_background">@color/transparent</color>
    <color name="item_tag_text">@color/black</color>
    <color name="item_tag_subtext">@color/gray</color>

    <!-- company fragment -->
    <color name="label">@color/gray</color>
    <color name="text">@color/black</color>
    <color name="subtext">@color/gray</color>
    <color name="empty_text">@color/gray</color>
    <color name="attention">@color/red</color>

    <color name="ok_button_text">@color/white</color>
    <color name="ok_button_normal">@color/orange</color>
    <color name="ok_button_Highlight">@color/dark_orange</color>

    <!-- spinner -->
    <color name="spinner_background">@color/light_gray</color>
    <color name="spinner_border">@color/gray</color>
    <color name="spinner_selected_item">@color/gray</color>

    <!-- parts -->
    <color name="border_line">@color/gray</color>

</resources>
